{
  "name": "helios",
  "version": "0.0.1",
  "private": true,
  "description": "A framework-agnostic engine for programmatic video creation.",
  "author": "Gavin Bintz <me@gavinbintz.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BintzGavin/helios.git"
  },
  "license": "ELv2",
  "bugs": {
    "url": "https://github.com/BintzGavin/helios/issues"
  },
  "homepage": "https://github.com/BintzGavin/helios#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npx vite ./examples/simple-canvas-animation",
    "dev:react": "vite serve examples/react-canvas-animation",
    "dev:react-dom": "vite serve examples/react-dom-animation",
    "dev:vue": "vite serve examples/vue-canvas-animation",
    "dev:vue-dom": "vite serve examples/vue-dom-animation",
    "dev:vue-helpers": "vite serve examples/vue-animation-helpers",
    "dev:react-helpers": "vite serve examples/react-animation-helpers",
    "dev:svelte": "vite serve examples/svelte-canvas-animation",
    "dev:threejs": "vite serve examples/threejs-canvas-animation",
    "dev:pixi": "vite serve examples/pixi-canvas-animation",
    "dev:p5": "vite serve examples/p5-canvas-animation",
    "dev:d3": "vite serve examples/d3-animation",
    "dev:procedural": "vite serve examples/procedural-generation",
    "build:examples": "vite build -c vite.build-example.config.js",
    "render:canvas-example": "npm run build:examples && ts-node packages/renderer/scripts/render.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/p5": "^1.7.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "autoprefixer": "^10.4.23",
    "chart.js": "^4.5.1",
    "d3": "^7.9.0",
    "framer-motion": "^12.29.2",
    "gsap": "^3.12.0",
    "lottie-web": "^5.13.0",
    "motion": "^12.0.0",
    "p5": "^2.2.0",
    "pixi.js": "^8.7.2",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "svelte": "^5.48.2",
    "tailwindcss": "^3.4.19",
    "three": "^0.182.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "vitest": "^4.0.17",
    "vue": "^3.5.27"
  }
}
