{
  "name": "helios",
  "version": "0.0.1",
  "private": true,
  "description": "A framework-agnostic engine for programmatic video creation.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BintzGavin/helios.git"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npx vite ./examples/simple-canvas-animation",
    "dev:react": "vite serve examples/react-canvas-animation",
    "dev:react-dom": "vite serve examples/react-dom-animation",
    "dev:vue": "vite serve examples/vue-canvas-animation",
    "dev:vue-dom": "vite serve examples/vue-dom-animation",
    "dev:svelte": "vite serve examples/svelte-canvas-animation",
    "dev:threejs": "vite serve examples/threejs-canvas-animation",
    "dev:pixi": "vite serve examples/pixi-canvas-animation",
    "build:examples": "vite build -c vite.build-example.config.js",
    "render:canvas-example": "npm run build:examples && ts-node packages/renderer/scripts/render.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "pixi.js": "^8.7.2",
    "svelte": "^5.48.2",
    "three": "^0.182.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "vitest": "^4.0.17",
    "vue": "^3.5.27"
  }
}
